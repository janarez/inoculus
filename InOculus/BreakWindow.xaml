<Window x:Class="InOculus.BreakWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InOculus"
        mc:Ignorable="d"
        Title="BreakWindow" WindowState="Maximized" WindowStyle="None" Background="Black" Opacity="0.55"
        KeyDown="WndBreak_KeyDown" x:Name="wndBreak">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Foreground="#FF229D5C" FontSize="42" Content="{Binding Path=CountDown}" x:Name="lblTime"></Label>
        <TextBlock Foreground="#FF229D5C" FontSize="42">Pres ESC to go back</TextBlock>
    </Grid>
</Window>
